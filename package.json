{
  "name": "angelfish-monorepo",
  "version": "0.0.1",
  "description": "A local-first personal finance app for people to track, manage and plan their finances to acheive financial freedom!",
  "keywords": [],
  "author": {
    "name": "Angelfish Software LLC",
    "email": "support@angelfish.app"
  },
  "license": "AGPL-3.0-or-later",
  "scripts": {
    "start": "yarn workspace angelfish start",
    "build:packages": "yarn workspaces foreach -Rpt --from  '{@angelfish/core,@angelfish/cloudapiclient,@angelfish/financeimporter}' run build",
    "lint": "yarn eslint . --fix",
    "prettify": "yarn prettier . -w",
    "format": "yarn prettify && yarn lint",
    "ts-check": "yarn workspaces foreach -A run ts-check",
    "test": "yarn workspaces foreach -A run test",
    "storybook": "yarn workspace @angelfish/frontend storybook"
  },
  "engines": {
    "node": ">=20.18.2"
  },
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "resolutions": {
    "@types/node": "^22.13.10",
    "axios": "^1.8.2",
    "electron-log": "^5.3.0",
    "moment": "^2.30.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "webpack": "^5.98.0",
    "vitest": "^3.0.7"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.7",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "eslint": "^9.22.0",
    "eslint-config-prettier": "10.0.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.2.0",
    "prettier": "3.5.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "typescript": "*"
  },
  "packageManager": "yarn@4.6.0"
}
