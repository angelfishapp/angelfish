{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "dist",
    "composite": true,
    // For Material-UI
    "lib": ["es6", "dom"],
    "paths": {
      // Also add aliases to webpack/webpack.alias.js
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "src/**/*.json"]
}
